<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultScreen"
    android:background="@drawable/epic_heart_bg"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/flames"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="300dp"
        />

    <Button
        android:id="@+id/calculate_results"
        android:text="@string/calculate_results"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:backgroundTint="@color/DarkRed"
        />

    <TextView
        android:id="@+id/final_result"
        android:layout_width="350dp"
        android:layout_height="60dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:autoSizeTextType="uniform"

        android:textColor="@color/Gray"
        android:drawablePadding="6dp"
        android:padding="10dp"
        app:drawableTint="@color/Purple"
        android:textStyle="bold"

        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="100dp"

        android:background="@drawable/border_style_1"
        />

    <Button
        android:id="@+id/exit"
        android:text="@string/exit"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="550dp"
        android:gravity="center"
        android:backgroundTint="@color/DarkRed"
        />

</androidx.constraintlayout.widget.ConstraintLayout>